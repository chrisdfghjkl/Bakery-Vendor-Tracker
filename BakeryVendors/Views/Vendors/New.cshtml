@{
  Layout = "_Layout";
}

<div class="container">
  <h1>Add New Vendor:</h1>
  <br>
  <form action="/vendors" method="post">
    <div class="form-group">
      <label for="vendorName">New Vendor Name</label>
      <input class="form-control" id="vendorName" name="vendorName" type="text">
      <br>
      <label for="vendorDescription">Vendor Description</label>
      <input class="form-control" id="vendorDescription" name="vendorDescription" type="text">
      <button type="submit" class="btn btn-primary">Add</button>
      <br>
      <p><a href="/">Back home</a></p>
      <p><a href="/vendors">Back to vendors</a></p>
    </div>
  </form>
</div>